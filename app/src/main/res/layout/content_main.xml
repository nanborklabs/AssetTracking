<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.versalite.assettracking.MainActivity"
    tools:showIn="@layout/app_bar_main"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <com.versalite.assettracking.WhitenyBooksFont
        android:layout_width="match_parent"
        android:id="@+id/title_text"
        android:gravity="center"
        android:layout_marginTop="20dp"

        android:text="Select Organisation"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_height="wrap_content" />
    <com.versalite.assettracking.WhitenyBooksFont
        android:layout_width="match_parent"
        android:text="Chooose Any Organisation to Perfrom Asset Audits"
        android:id="@+id/s_t_t"
        android:gravity="center"

        android:layout_below="@id/title_text"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/org_layout"
        android:layout_below="@+id/s_t_t"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            style="@style/card_border"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:text="ABC company"
                    style="@style/text_incard"
                    android:layout_height="wrap_content" />

                <com.versalite.assettracking.WhitenyBooksFont
                    style="@style/bottom_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Last Audit :  15 April" />
                <com.versalite.assettracking.WhitenyBooksFont
                    style="@style/bottom_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Audit Done By: Dilip" />
            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardUseCompatPadding="true"
            app:cardElevation="8dp"
            style="@style/card_border"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Incubex Pvt Ltd"
                    style="@style/text_incard"
                    android:layout_height="wrap_content" />

                <com.versalite.assettracking.WhitenyBooksFont
                    style="@style/bottom_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Last Audit :  15 April" />
                <com.versalite.assettracking.WhitenyBooksFont
                    style="@style/bottom_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Audit Done By: Dilip" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardUseCompatPadding="true"
            app:cardElevation="8dp"
            style="@style/card_border"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Fassos"
                    style="@style/text_incard"
                    android:layout_height="wrap_content" />

                <com.versalite.assettracking.WhitenyBooksFont
                    style="@style/bottom_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Last Audit :  15 April" />
                <com.versalite.assettracking.WhitenyBooksFont
                    style="@style/bottom_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Audit Done By: Dilip" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardUseCompatPadding="true"
            style="@style/card_border"
            app:cardElevation="8dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Accenture India PLC"
                    style="@style/text_incard"
                    android:layout_height="wrap_content" />

                <com.versalite.assettracking.WhitenyBooksFont
                    style="@style/bottom_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Last Audit : 18 March" />
                <com.versalite.assettracking.WhitenyBooksFont
                    style="@style/bottom_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Audit Done By: Nafal" />
            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>



</RelativeLayout>
