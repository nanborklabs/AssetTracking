<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <!--Asset Name-->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"

        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        android:id="@+id/textInputLayout">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Asset Name"/>

    </android.support.design.widget.TextInputLayout>


    <TextView
        android:layout_width="wrap_content"
        android:text="Select Asset Type"
        android:layout_marginLeft="12dp"
        style="@style/margin"
        android:layout_height="wrap_content"
        android:id="@+id/asset_name"
        android:layout_below="@+id/textInputLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <Spinner
        android:id="@+id/asset_type_spinner"
        android:layout_marginTop="4dp"
        style="@style/margin"
        android:layout_below="@+id/asset_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:text="Asset Description"
        android:layout_marginLeft="12dp"
        android:layout_height="wrap_content"
        android:id="@+id/asset_desc"
        android:layout_below="@+id/asset_type_spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <Spinner
        android:id="@+id/asset_desc_spinner"
        android:layout_marginTop="4dp"
        style="@style/margin"
        android:layout_below="@+id/asset_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:text="Asset Tagging"
        android:layout_marginLeft="12dp"
        android:layout_height="wrap_content"
        style="@style/margin"
        android:id="@+id/asset_tag"
        android:layout_below="@+id/asset_desc_spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="4"
        style="@style/margin"
        android:id="@+id/ll"
        android:orientation="vertical"
        android:layout_below="@+id/asset_tag"
        android:layout_height="wrap_content">


        <!--Organisation-->

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:id="@+id/org_layout"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/stat_con"
            android:layout_height="40dp">
            <com.versalite.assettracking.WhitenyBooksFont
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Organisation"

                android:layout_height="match_parent" />

            <
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/material_black"
                android:text="Versalite"

                android:gravity="center"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_width="50dp"
                android:padding="2dp"
                app:srcCompat="@drawable/ic_edit"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_width="50dp"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_error"
                android:layout_height="match_parent" />


        </LinearLayout>
        <!--Locations-->
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:id="@+id/loca_con"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/org_layout"
            android:layout_height="40dp">
            <com.versalite.assettracking.WhitenyBooksFont
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Location"

                android:layout_height="match_parent" />

            <com.versalite.assettracking.WhitenyBooksFont
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/material_black"
                android:text="Bangalore"
                android:gravity="center"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_width="50dp"
                android:padding="2dp"
                app:srcCompat="@drawable/ic_edit"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_width="50dp"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_error"
                android:layout_height="match_parent" />

        </LinearLayout>
        <!--Dept-->
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:id="@+id/dept_con"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/loca_con"
            android:layout_height="40dp">
            <com.versalite.assettracking.WhitenyBooksFont
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Department"

                android:layout_height="match_parent" />


            <com.versalite.assettracking.WhitenyBooksFont
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Costruction"
                android:textColor="@color/material_black"
                android:gravity="center"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_width="50dp"
                android:padding="2dp"
                app:srcCompat="@drawable/ic_edit"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_width="50dp"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_error"
                android:layout_height="match_parent" />

        </LinearLayout>
        <!--Room-->
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:textColor="@color/material_black"
            android:weightSum="2"
            android:id="@+id/room_cont"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/dept_con"
            android:layout_height="40dp">
            <com.versalite.assettracking.WhitenyBooksFont
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Room"

                android:layout_height="match_parent" />

            <com.versalite.assettracking.WhitenyBooksFont
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Warehouse"
                android:textColor="@color/material_black"
                android:gravity="center"
                android:layout_height="match_parent" />
            <ImageView
                android:padding="2dp"
                android:layout_width="50dp"
                app:srcCompat="@drawable/ic_edit"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_width="50dp"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_error"
                android:layout_height="match_parent" />

        </LinearLayout>




    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:text="Save"
        style="@style/margin"
        android:layout_below="@+id/ll"
        android:id="@+id/save_button"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content" />






</RelativeLayout>
</ScrollView>